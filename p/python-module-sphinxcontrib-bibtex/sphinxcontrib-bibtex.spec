%prep
%setup

%if_with python3
cp -fR . ../python3
%endif

%prepare_sphinx .
ln -s ../objects.inv doc/

%build
%python_build_debug

%if_with python3
pushd ../python3
%python3_build_debug
popd
%endif

%install
%python_install

%if_with python3
pushd ../python3
%python3_install
popd
%endif

export PYTHONPATH=$PWD
%make -C doc pickle
%make -C doc html
install -d %buildroot%python_sitelibdir/%oname
cp -fR doc/_build/pickle %buildroot%python_sitelibdir/%oname/

%check
export LC_ALL=en_US.UTF-8
python setup.py test -v
export PYTHONPATH=$PWD
coverage run --source=sphinxcontrib.bibtex $(type -p nosetests) -vv
%if_with python3
pushd ../python3
python3 setup.py test -v
export PYTHONPATH=$PWD
#coverage3 run --source=sphinxcontrib.bibtex $(type -p nosetests3) -vv
popd
%endif

%files
%doc *.rst
%dir %python_sitelibdir/%oname
%python_sitelibdir/%mname/bibtex
%python_sitelibdir/*.egg-info

%files pickles
%python_sitelibdir/%oname/pickle

%files docs
%doc doc/_build/html/*

%if_with python3
%files -n python3-module-%oname
%doc *.rst
%python3_sitelibdir/%mname/bibtex
%python3_sitelibdir/*.egg-info
%endif

