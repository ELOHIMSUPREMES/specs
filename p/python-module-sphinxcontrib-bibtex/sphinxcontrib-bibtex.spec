%define mname sphinxcontrib
%define oname %mname-bibtex

%def_with python3

Name: python-module-%oname
Version: 0.3.3
Release: alt1.a0.git20150323
Summary: A Sphinx extension for BibTeX style citations
License: BSD
Group: Development/Python
Url: https://pypi.python.org/pypi/sphinxcontrib-bibtex
Packager: Eugeny A. Rostovtsev (REAL) <real at altlinux.org>

# https://github.com/mcmtroffaes/sphinxcontrib-bibtex.git
# branch: develop
Source: %name-%version.tar
BuildArch: noarch

BuildPreReq: python-devel python-module-setuptools-tests
BuildPreReq: python-module-latexcodec python-module-pybtex
BuildPreReq: python-module-pybtex-docutils python-module-six
BuildPreReq: python-module-sphinx-devel python-module-oset
BuildPreReq: python-module-nose python-module-coverage
BuildPreReq: python-module-sphinx_testing python-module-tinkerer
%if_with python3
BuildRequires(pre): rpm-build-python3
BuildPreReq: python3-devel python3-module-setuptools-tests
BuildPreReq: python3-module-latexcodec python3-module-pybtex
BuildPreReq: python3-module-pybtex-docutils python3-module-six
BuildPreReq: python3-module-sphinx-devel python3-module-oset
BuildPreReq: python3-module-nose python3-module-coverage
BuildPreReq: python3-module-sphinx_testing python3-module-tinkerer
%endif

%py_provides %mname.bibtex
%py_requires %mname latexcodec pybtex pybtex_docutils sphinx oset

%description
This extension allows BibTeX citations to be inserted into documentation
generated by Sphinx, via a bibliography directive, and a cite role,
which work similarly to LaTeX's thebibliography environment and \cite
command.

%if_with python3
%package -n python3-module-%oname
